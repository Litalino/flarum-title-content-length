{
    "name": "litalino/flarum-title-content-length",
    "description": "Customize discussion title-content length.",
    "keywords": [
        "flarum",
        "flarum-extension",
        "title content length"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.2"
    },
    "authors": [
        {
            "name": "Litalino",
            "email": "info@khatvongsong.vn",
            "role": "Co-development"
        },
		{
            "name": "Ngo Quoc Dat",
            "email": "datlechin@gmail.com",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://github.com/litalino/flarum-title-content-length",
        "forum": "https://discuss.flarum.org/d/29924"
    },
    "autoload": {
        "psr-4": {
            "Litalino\\TitleContentLength\\": "src/"
        }
    },
    "homepage": "https://khatvongsong.vn",
    "extra": {
        "flarum-extension": {
            "title": "Title Content Length",
            "category": "feature",
            "icon": {
                "name": "fas fa-ruler-horizontal",
                "color": "#fff",
                "backgroundColor": "#D3241C"
            }
        },
        "flarum-cli": {
            "modules": {
                "admin": true,
                "forum": false,
                "js": true,
                "jsCommon": false,
                "css": false,
                "locale": true,
                "gitConf": true,
                "githubActions": true,
                "prettier": true,
                "typescript": false,
                "bundlewatch": false,
                "backendTesting": false,
                "editorConfig": true,
                "styleci": true
            }
        }
    },
    "require-dev": {
      "flarum/phpstan": "*"
    },
    "scripts": {
        "analyse:phpstan": "phpstan analyse",
        "clear-cache:phpstan": "phpstan clear-result-cache"
    },
    "scripts-descriptions": {
        "analyse:phpstan": "Run static analysis"
    }
}
